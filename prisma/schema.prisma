generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../database.db"
}

model Global {
  // Must be 0
  id    Int @id
  count Int @default(0)

  @@map("global_data")
}

model Guild {
  id    BigInt  @id
  level Int?
  count Int?
  logs  BigInt?

  @@index([id])
  @@map("guilds")
}

model User {
  id    BigInt @id
  count Int?

  @@index([id])
  @@map("users")
}
