{
  "name": "gasbot",
  "version": "4.0.2",
  "description": "A bot to remove and protect you from the letter G.",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node --env-file=.env --enable-source-maps .",
    "deploy": "tsx --env-file=.env src/index.ts --deploy",
    "env:encrypt": "dotenvx ext vault encrypt",
    "env:decrypt": "dotenvx ext vault decrypt",
    "dev": "tsx watch --env-file=.env src/index.ts",
    "test": "node --run check && node --run typecheck",
    "postinstall": "prisma generate",
    "build": "tsc",
    "check": "biome check",
    "format": "biome format --write",
    "lint": "biome lint",
    "lint:fix": "biome lint --fix --unsafe",
    "typecheck": "tsc --noEmit",
    "changelog": "standard-changelog"
  },
  "imports": {
    "#*": "./dist/*/index.js"
  },
  "dependencies": {
    "@prisma/client": "^5.16.1",
    "bufferutil": "^4.0.8",
    "dedent": "^1.5.3",
    "discord.js": "^14.15.3",
    "g-detector": "^0.1.6",
    "neon-env": "^0.2.2",
    "zlib-sync": "^0.1.9"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@dotenvx/dotenvx": "^1.12.1",
    "cross-env": "^7.0.3",
    "prisma": "^5.16.1",
    "standard-changelog": "^6.0.0",
    "tsx": "^4.17.0",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@9.4.0"
}
