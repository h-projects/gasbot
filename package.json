{
  "name": "gasbot",
  "version": "3.1.3",
  "description": "A bot to remove and protect you from the letter G.",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node --enable-source-maps .",
    "deploy": "tsx src/index.ts --deploy",
    "dev": "tsx watch src/index.ts",
    "test": "npm run lint && npm run typecheck && npm run check",
    "build": "tsc",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check": "prettier --check .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "env": "dotenv-vault pull",
    "env:push": "dotenv-vault push",
    "env:production": "dotenv-vault pull production .env",
    "env:production:push": "dotenv-vault push production .env"
  },
  "imports": {
    "#*": "./dist/*/index.js"
  },
  "repository": {
    "url": "https://github.com/h-projects/gasbot"
  },
  "keywords": [],
  "author": "Aytch Software",
  "license": "GPL-2.0-or-later",
  "dependencies": {
    "@prisma/client": "^4.11.0",
    "bufferutil": "^4.0.7",
    "discord.js": "^14.8.0",
    "dotenv": "^16.0.2",
    "g-detector": "^0.1.4",
    "neon-env": "^0.1.3",
    "topgg-autoposter": "^2.0.1",
    "ts-dedent": "^2.2.0",
    "utf-8-validate": "^6.0.3",
    "yoctocolors": "^1.0.0",
    "zlib-sync": "^0.1.8"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "conventional-changelog-cli": "^2.2.2",
    "cross-env": "^7.0.3",
    "dotenv-vault": "^1.18.0",
    "eslint": "^8.36.0",
    "prettier": "^2.8.6",
    "prisma": "^4.11.0",
    "tsx": "^3.12.6",
    "typescript": "^5.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
