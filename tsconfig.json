{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022"],

    "module": "esnext",
    "moduleResolution": "nodenext",
    "baseUrl": "src",
    "rootDir": "src",
    "resolveJsonModule": true,

    "sourceMap": true,
    "outDir": "dist",
    "pretty": true,
    "noEmitOnError": true,

    "paths": {
      "#*": ["*/index.ts"],
    },

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,

    "skipLibCheck": true
  }
}
