{
  "compilerOptions": {
    "lib": ["esnext"],
    "module": "nodenext",

    "rootDir": "src",
    "outDir": "dist",
    "verbatimModuleSyntax": true,

    "erasableSyntaxOnly": true,
    "rewriteRelativeImportExtensions": true,
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "sourceMap": true,

    "strict": true
  }
}
