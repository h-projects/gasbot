{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022"],

    "module": "nodenext",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,

    "paths": {
      "#*": ["./src/*/index.ts"]
    },

    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "sourceMap": true,

    "strict": true
  }
}
