{
  "compilerOptions": {
    "module": "nodenext",
    "lib": ["esnext"],

    "rootDir": "src",
    "outDir": "dist",

    "erasableSyntaxOnly": true,
    "rewriteRelativeImportExtensions": true,
    "verbatimModuleSyntax": true,

    "noEmitOnError": true,
    "skipLibCheck": true,
    "sourceMap": true,

    "strict": true
  }
}
