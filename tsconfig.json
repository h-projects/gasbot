{
  "compilerOptions": {
    "lib": ["esnext"],
    "module": "nodenext",

    "rootDir": "src",
    "outDir": "dist",
    "verbatimModuleSyntax": true,

    "paths": {
      "#*": ["./src/*/index.ts"]
    },

    "resolveJsonModule": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "sourceMap": true,

    "strict": true
  }
}
